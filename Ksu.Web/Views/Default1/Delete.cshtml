@model Ksu.Core.Contracts.Contract

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Contract</legend>

    <div class="display-label">ContractNo</div>
    <div class="display-field">@Model.ContractNo</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">ContractHistories</div>
    <div class="display-field">@(Model.ContractHistories == null ? "None" : Model.ContractHistories.Count.ToString())</div>

    <div class="display-label">ContractProgresses</div>
    <div class="display-field">@(Model.ContractProgresses == null ? "None" : Model.ContractProgresses.Count.ToString())</div>

    <div class="display-label">Project</div>
    <div class="display-field">@(Model.Project == null ? "None" : Model.Project.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


