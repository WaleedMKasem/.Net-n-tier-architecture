<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>شئون الموظفين-@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @*<link href="~/Content/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" />*@
    
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

    @*<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>*@
    @*<link href="~/Content/jquery.ui.all.css" rel="stylesheet" />*@
    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.ui.menubar.js"></script>
    <link href="~/Content/jquery.ui.menubar.css" rel="stylesheet" />
    @*DatePicker*@
    <script src="~/Scripts/jquery.calendars.js"></script>
    <script src="~/Scripts/jquery.calendars.picker.js"></script>
    <script src="~/Scripts/jquery.calendars.picker-ar.js"></script>
    <script src="~/Scripts/jquery.calendars.plus.js"></script>
    <script src="~/Scripts/jquery.calendars.ummalqura.min.js"></script>
    <script src="~/Scripts/jquery.calendars.ummalqura-ar.js"></script>
    <link href="~/Content/jquery.calendars.picker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.calendars-ar-EG.js"></script>
    <script src="~/Scripts/globalize.cultures.js"></script>
    <script src="~/Scripts/globalize.js"></script>


    @*<script src="~/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>*@
    <script type="text/javascript">

        function IntializeCalendar() {

            $(".UMQDate").each(function () {
                var instance = this.id;
                $('#' + instance).calendarsPicker({
                    calendar: $.calendars.instance('ummalqura', 'ar'),
                    yearRange: 'c-60:c+10',
                    showOnFocus: false,
                    //isRTL:false,
                    showTrigger: '<img src=@Url.Content("~/Content/images/calendar.png") alt="Popup" class="trigger">',
                    onSelect: function(date) { 
                        $('#' + instance).focus();
                        $('#' + instance).blur();
                       
                    }

                });
            });
            $(".GRGDate").each(function () {
                var instance = this.id;
                $('#' + instance).calendarsPicker({
                    calendar: $.calendars.instance('gregorian', 'ar-EG'),
                    yearRange: 'c-60:c+10',
                    showOnFocus: false,
                    dateFormat: 'yyyy/mm/dd',
                    //isRTL:false,
                    showTrigger: '<img src=@Url.Content("~/Content/images/calendar.png") alt="Popup" class="trigger">',
                    onSelect: function (date) {
                        $('#' + instance).focus();
                        $('#' + instance).blur();
                    }

                });
            });
        }
        $(function () {
            $("#bar1").menubar({
                position: {
                    within: $("#demo-frame").add(window).first()
                }
            });
            IntializeCalendar();
        });


    </script>
     
</head>
<body>
    <div style="width: 950px; margin: auto">
        @*<img src="~/Content/images/header-1.png" style="margin:auto;width:100%;" />*@
        <ul id="bar1" class="menubar">
            <li >@Html.ActionLink("المشروعات", "", "Project")</li>
        </ul>
        
        <div style="margin-top:50px;">
            @RenderBody()
        </div>
        @*<img src="~/Content/images/footer-1.png" style="margin-top:30px;width:100%;" />*@
    </div>
  
</body>
</html>

